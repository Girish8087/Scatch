<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Scatch</title>
  <link rel="shortcut icon" href="../images/Scatch.png" type="image/x-icon" />
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&display=swap" rel="stylesheet" />
  <link href="/stylesheets/output.css" rel="stylesheet" />
  <style>
    .gucci-font {
      font-family: 'Playfair Display', serif;
    }
  </style>
</head>

<body>
  <% if (logout && logout.length > 0) { %>
    <% logout.forEach(out => { %>
      <div id="flash"
        class="fixed top-4 left-1/2 -translate-x-1/2 bg-red-500 text-white w-80 px-4 py-3 rounded-md shadow-lg flex flex-col gap-2 animate-bounce z-50">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <span class="text-xl">ðŸ‘‹</span>
            <p class="text-sm font-medium"><%= out %></p>
          </div>
          <button onclick="closeFlash()" class="text-white font-bold text-lg leading-none">&times;</button>
        </div>
        <div class="h-1 bg-white/50 relative overflow-hidden rounded">
          <div id="progress" class="absolute top-0 left-0 h-full bg-white"></div>
        </div>
      </div>
    <% }) %>
  <% } %>

  <% if (error2 && error2.length > 0) { %>
    <% error2.forEach(error => { %>
      <div id="flash"
        class="fixed top-4 left-1/2 -translate-x-1/2 bg-red-500 text-white w-80 px-4 py-3 rounded-md shadow-lg flex flex-col gap-2 animate-bounce">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <span class="text-xl">ðŸš«</span>
            <p class="text-sm font-medium"><%= error %></p>
          </div>
          <button onclick="closeFlash()" class="text-white font-bold text-lg leading-none">&times;</button>
        </div>
        <div class="h-1 bg-white/50 relative overflow-hidden rounded">
          <div id="progress" class="absolute top-0 left-0 h-full bg-white"></div>
        </div>
      </div>
    <% }) %>
  <% } %>

  <div class="w-full h-screen flex items-center justify-center bg-white">
    <div class="w-[30rem] p-10 border-1 border-zinc-200 rounded-md shadow-md">
      <h1 class="font-bold text-3xl selection:bg-transparent">Welcome to <span class="text-blue-500 gucci-font">Scatch</span></h1>
      <h5 class="font-semibold text-lg selection:bg-transparent">Login your account</h5>
      <form class="flex flex-col gap-4 w-full mt-5" action="/users/login" method="post">
        <input
          class="bg-zinc-200 px-5 py-2 rounded-md block w-full outline-none focus:ring-2 focus:ring-cyan-500 focus:shadow-lg"
          name="email" type="text" placeholder="Email" />
        <input
          class="bg-zinc-200 px-5 py-2 rounded-md block w-full outline-none focus:ring-2 focus:ring-cyan-500 focus:shadow-lg"
          name="password" type="text" placeholder="Password" />
        <button
          class="bg-[#0285FF] w-fit text-md font-semibold text-white px-7 py-2 rounded-3xl cursor-pointer hover:scale-105 active:scale-95 transition ease-in selection:bg-transparent">Login</button>
        <a class="text-sm text-center mt-2 text-[#2874F0] font-semibold" href="/">New to Scatch? Create an account</a>
      </form>
    </div>
  </div>

  <script>
    function closeFlash() {
      document.getElementById('flash').classList.add('opacity-0', 'transition', 'duration-500');
      setTimeout(() => document.getElementById('flash').remove(), 500);
    }

    window.addEventListener('DOMContentLoaded', () => {
      let progress = document.getElementById('progress');
      progress.style.width = '100%';
      progress.style.transition = 'width 3s linear';
      setTimeout(() => { progress.style.width = '0%'; }, 50);
      setTimeout(() => closeFlash(), 3000);
    });
  </script>
</body>

</html>
